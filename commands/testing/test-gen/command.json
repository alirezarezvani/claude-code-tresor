{
  "name": "test-gen",
  "description": "Generate comprehensive test suites automatically for components, functions, and APIs",
  "category": "testing",
  "parameters": {
    "required": [],
    "optional": ["file", "type", "framework", "coverage", "mocks", "output-dir"]
  },
  "examples": [
    {
      "usage": "/test-gen --file src/utils/helpers.ts",
      "description": "Generate tests for a specific utility file"
    },
    {
      "usage": "/test-gen --type component --framework jest",
      "description": "Generate component tests using Jest"
    },
    {
      "usage": "/test-gen --type api --coverage 90",
      "description": "Generate API tests with 90% coverage target"
    }
  ],
  "supported_types": [
    "unit",
    "component",
    "integration",
    "e2e",
    "api",
    "hook",
    "service",
    "utility"
  ],
  "supported_frameworks": [
    "jest",
    "vitest",
    "mocha",
    "chai",
    "cypress",
    "playwright",
    "testing-library",
    "enzyme"
  ],
  "author": "Alireza Rezvani",
  "version": "1.0.0",
  "created": "2025-09-16"
}